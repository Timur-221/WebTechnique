<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Учебная организация</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/AnumeButton.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
</head>
<body>
    <div id="vanta-background" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"></div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/AnimeButton.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vanta/0.5.21/vanta.net.min.js"></script>
    <script>
        VANTA.NET({
            el: "#vanta-background", // Используем элемент с id="vanta-background"
            mouseControls: true,
            touchControls: true,
            gyroControls: false,
            minHeight: window.innerHeight, // Минимальная высота будет равна высоте окна
            minWidth: window.innerWidth, // Минимальная ширина будет равна ширине окна
            scale: 1.00,
            scaleMobile: 1.00,
            color: 0x3f55ff,
            backgroundColor: 0x0,
            points: 7.00,
            spacing: 14.00
        });
    </script>
</body>
</html>